{% extends 'admin/admin.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm12">
                <div class="responsive-table">
                    <table>
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>NAME</th>
                            <th>DATE</th>
                            <th>VIEWS</th>
                            <th>IS ACTIVE</th>
                            <th>ACTION</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for post in posts %}
                            <tr>
                                <td>{{ post.getId() }}</td>
                                <td>{{ post.getTitle() }}</td>
                                <td>{{ post.getDate()|date("m/d/Y") }}</td>
                                <td>{{ post.getViews() }}</td>
                                <td><input type="checkbox" name="is_active" class="form-control"
                                           data-post-id="{{ post.getId() }}" data-url="{{ path("admin_set_active") }}"
                                           value="0" {{ post.getIsActive() ? "checked" : "" }}></td>
                                <td>
                                    <a href="{{ path('admin_post_edit', {'id': post.getId()}) }}"><span
                                                class="glyphicon glyphicon-pencil">Edit</span></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}